{
  "kind": "collectionType",
  "collectionName": "blogs",
  "info": {
    "singularName": "blog",
    "pluralName": "blogs",
    "displayName": "blog"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "blogTitle": {
      "type": "string"
    },
    "blogSlug": {
      "type": "string"
    },
    "blogMetaTitle": {
      "type": "string"
    },
    "blogMetaDescription": {
      "type": "string"
    },
    "blogDate": {
      "type": "date"
    },
    "blogImage": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "contentSection": {
      "type": "dynamiczone",
      "components": [
        "element.blog-content",
        "element.blog-image"
      ]
    },
    "blogQuote": {
      "type": "string"
    }
  }
}
